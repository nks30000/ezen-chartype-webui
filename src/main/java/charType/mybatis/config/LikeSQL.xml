<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="like">

	
<insert id = "likeReg" parameterType = "java.util.HashMap">
<![CDATA[
INSERT INTO TB_LIKE
	(ID, BOARD_NUM)
VALUES
	(#{ID}, #{BOARD_NUM})
]]>
</insert>

<delete id = "likeDel" parameterType = "java.util.HashMap">
<![CDATA[
DELETE FROM
	TB_LIKE
WHERE
	ID=#{ID} 
]]>
</delete>

<select id = "likeCount" parameterType = "java.util.HashMap" resultType = "java.util.HashMap">
<![CDATA[
SELECT 
	COUNT(ID)
FROM
	TB_LIKE
WHERE
	BOARD_NUM=#{BOARD_NUM}
]]>
</select>


	
	
	
</mapper>